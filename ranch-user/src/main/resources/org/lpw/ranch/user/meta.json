{
    "key": "ranch.user",
    "props": [
        {
            "name": "idcard"
        },
        {
            "name": "name"
        },
        {
            "name": "nick"
        },
        {
            "name": "mobile"
        },
        {
            "name": "email"
        },
        {
            "name": "gender",
            "labels": ".genders"
        },
        {
            "name": "birthday"
        },
        {
            "name": "code",
            "type": "read-only"
        },
        {
            "name": "register",
            "type": "read-only"
        },
        {
            "name": "grade"
        },
        {
            "name": "state",
            "labels": ".states"
        }
    ],
    "query": {
        "type": "grid",
        "search": [
            {
                "name": "idcard"
            },
            {
                "name": "name"
            },
            {
                "name": "nick"
            },
            {
                "name": "mobile"
            },
            {
                "name": "email"
            },
            {
                "name": "code",
                "type": ""
            },
            {
                "name": "minGrade",
                "label": ".grade"
            },
            {
                "name": "maxGrade",
                "label": "-"
            },
            {
                "name": "registerStart",
                "label": ".register"
            },
            {
                "name": "registerEnd",
                "label": "-"
            },
            {
                "name": "state"
            }
        ],
        "ops": [
            {
                "type": "post-id",
                "label": "ranch.user.state.enable",
                "service": ".state",
                "parameter": {
                    "state": 0
                },
                "success": ".query",
                "when": "row.state===1"
            },
            {
                "type": "post-id",
                "label": "ranch.user.state.disable",
                "service": ".state",
                "parameter": {
                    "state": 1
                },
                "success": ".query",
                "when": "row.state===0"
            },
            {
                "type": "post-id",
                "label": "ranch.user.manager",
                "service": ".grade",
                "parameter": {
                    "grade": 90
                },
                "success": ".query",
                "when": "row.grade<90"
            },
            {
                "type": "post-id",
                "label": "ranch.user.manager.cancel",
                "service": ".grade",
                "parameter": {
                    "grade": 0
                },
                "success": ".query",
                "when": "row.grade>=90"
            }
        ]
    }
}
